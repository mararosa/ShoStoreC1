<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_image_height"
            android:layout_margin="@dimen/dimen_16dp"
            android:fitsSystemWindows="false"
            android:src="@drawable/image_welcome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_16dp"
            android:textSize="20sp"
            android:fontFamily="@font/palanquin_dark_bold"
            android:text="@string/welcome_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/palanquin"
            android:text="@string/welcome_description"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/welcome_button_margin_top"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:background="@drawable/background_button"
            android:text="@string/welcome_instructions_button"
            android:textColor="@color/white" />

    </LinearLayout>

</layout>
